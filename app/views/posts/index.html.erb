<div class="w-full">
  <% @posts.each do |post| %>
    <div class="my-8">
      <%= render "posts/#{post.post_type}_post", post: post %>
    </div>
  <% end %>

  <div class="flex justify-between mt-8">
        <% if previous_page %>

            <div class="ml-auto mr-10 bg-white rounded-full h-30 inline-block self-center p-2 px-2">
                <%= link_to 'Previous', posts_path(page: previous_page), class: "text-xl hover:text-gray-500 font-regular mx-6" if previous_page %>
            </div>
        <% end %>
        <% if next_page %>
        <div class="mr-auto mr-10 bg-white rounded-full h-30 inline-block self-center p-2 px-2">
            <%= link_to 'Next', posts_path(page: next_page), class: "text-xl hover:text-gray-500 font-regular mx-6"%>
        </div>
        <% end %>
    </div>
</div>