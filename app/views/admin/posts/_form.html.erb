
<%= form_with model: @post, url: admin_post_path(@post) do |form| %>
  <div class="field">
    <%= form.label :post_type %>
    <%= form.select :post_type, options_for_select(Post.post_types, @post.post_type) %>
    <%= form.label :title %>
    <%= form.text_field :title %>   
    <%= form.label :author %>
    <%= form.text_field :author %>
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
    <%= form.label :image, "Post Image" %>
    <%= form.file_field :image %>
    <%= form.label :image, "Background Image" %>
    <%= form.file_field :background_image %>
    <%= form.submit %>
  </div>

  <%= image_tag @post.background_image.variant(resize_to_fill: [200, 200]) if @post.background_image.persisted?  %>
  <%= image_tag @post.image.variant(resize_to_fill: [200, 200]) if @post.image.persisted?  %>
<% end %>